@model VillaRent_Web.Models.DTO.VillaNumberUpdateDto

<form asp-action="UpdateVillaNumber">
    <br/>
    <div class="container border p-3">
        <h1 class="text-primary">Update Villa Number</h1>
        <hr/>
        <input hidden asp-for="VillaNo" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
            <div class="col-2">
                <label asp-for="VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNo" class="form-control"/>
                <span asp-validation-for="VillaNo" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="VillaId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaId" class="form-control">
                    <option selected>Select VillaId</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
                <span asp-validation-for="VillaId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Details" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Details" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" class="btn-primary btn form-control">Back to list</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success from-control"/>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}